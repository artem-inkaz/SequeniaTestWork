<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_genres_add_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbar_title</item>
        <item name="android:paddingTop">@dimen/padding_top_header_genres</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_header_genres</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="item_genres_add_style">
        <item name="android:layout_width">@dimen/item_genres_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="item_movie_card_add_style">
        <item name="android:layout_width">@dimen/movie_card_width</item>
        <item name="android:layout_height">@dimen/movie_card_height</item>
        <item name="android:layout_marginTop">@dimen/view_medium_gap</item>
        <item name="android:layout_marginStart">@dimen/view_big_gap</item>
        <item name="android:layout_marginEnd">@dimen/view_big_gap</item>
        <item name="android:layout_marginBottom">@dimen/view_big_gap</item>
        <item name="android:padding">@dimen/view_medium_gap</item>
    </style>

    <style name="item_movie_card_empty_image_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_empty_image_title</item>
        <item name="android:background">@color/item_movie_background</item>
        <item name="android:padding">@dimen/padding_empty_image_title</item>
        <item name="android:paddingTop">@dimen/padding_top_empty_image_title</item>
        <item name="android:text">@string/alert_description_download_image_movie</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_description</item>
    </style>

    <style name="item_movie_card_empty_image_description_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_empty_image_title</item>
        <item name="android:background">@color/alfa_main_bg</item>
        <item name="android:paddingTop">@dimen/padding_top_empty_image_description</item>
        <item name="android:text">@string/text_empty_image_description</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_description</item>
    </style>

    <style name="header_movie_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_empty_image_title</item>
        <item name="android:background">@color/toolbar_title</item>
        <item name="android:padding">@dimen/padding_top_header_movie_list</item>
        <item name="android:textSize">@dimen/text_size_header_movie_list</item>
        <item name="android:text">@string/header_movie_list_container</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="image_movie_description">
        <item name="android:layout_width">@dimen/width_image_movie_item_description</item>
        <item name="android:layout_height">@dimen/height_image_movie_item_description</item>
        <item name="android:layout_marginTop">@dimen/margin_top_image_movie_item_description</item>
        <item name="android:layout_marginStart">@dimen/margin_start_image_movie_item_description
        </item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:contentDescription">@string/content_description_poster_movie</item>
    </style>

    <style name="name_movie_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_name_movie_item_description</item>
        <item name="android:layout_marginStart">@dimen/margin_start_name_movie_item_description
        </item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="year_movie_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_year_movie_item_description</item>
        <item name="android:layout_marginStart">@dimen/margin_start_name_movie_item_description
        </item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="rating_movie_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_year_movie_item_description</item>
        <item name="android:layout_marginStart">@dimen/margin_start_name_movie_item_description
        </item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="description_movie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_description_movie_item_description
        </item>
        <item name="android:textColor">@color/text_view</item>
    </style>

    <style name="feed_header_arrow_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_start_feed_header_arrow_back</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_feed_header_arrow_back</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:contentDescription">@string/content_description_arrow_back</item>
    </style>

    <style name="feed_header_toolbar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_toolbar_title_feed_header</item>
        <item name="android:textColor">@color/text_toolbar_description</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title_feed_header</item>
    </style>

</resources>